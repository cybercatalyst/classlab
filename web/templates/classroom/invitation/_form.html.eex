<div class="card">
  <div class="card-header">New invitation</div>
  <div class="card-block">
    <%= form_for @changeset, @action, [class: "ui form"], fn f -> %>
      <%= if @changeset.action do %>
        <div class="ui negative message">
          <p>Oops, something went wrong! Please check the errors below.</p>
        </div>
      <% end %>

      <div class="row">
        <div class="col-md-3"><%= input f, :email, placeholder: "email@domain.com" %></div>
        <div class="col-md-2"><%= input f, :first_name, placeholder: "(optional)" %></div>
        <div class="col-md-2"><%= input f, :last_name, placeholder: "(optional)" %></div>
        <div class="col-md-2">
        <label>&nbsp;</label><br>
        <%= submit "Send invitation", class: "btn btn-primary" %></div>
      </div>
    <% end %>
  </div>
</div>
