<%= form_for @changeset, @action, [class: "ui form"], fn f -> %>
  <%= if @changeset.action do %>
    <div class="ui negative message">
      <p>Oops, something went wrong! Please check the errors below.</p>
    </div>
  <% end %>


  <%= input f, :event_id %>
  <%= input f, :content_rating, using: :select, collection: (1..5) %>
  <%= input f, :content_comment %>
  <%= input f, :trainer_rating, using: :select, collection: (1..5) %>
  <%= input f, :trainer_comment %>
  <%= input f, :location_rating, using: :select, collection: (1..5) %>
  <%= input f, :location_comment %>
  <%= input f, :testimonial, using: :textarea, rows: 5 %>

  <div class="btn-toolbar">
    <%= submit "Submit", class: "btn btn-primary" %>

    <%= link "Back", to: account_feedback_path(@conn, :index), class: "btn btn-secondary" %>
  </div>
<% end %>
